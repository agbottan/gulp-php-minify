{
  "description": "Gulp.js plugin minifying PHP source code by removing comments and whitespace.",
  "homepage": "https://github.com/aquafadas-com/gulp-php-minify",
  "name": "@aquafadas/gulp-php-minify",

  "author": "Aquafadas <opensource@aquafadas.com>",
  "bugs": "https://github.com/aquafadas-com/gulp-php-minify/issues",
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "repository": "aquafadas-com/gulp-php-minify",
  "version": "0.2.0",

  "devDependencies": {
    "@cedx/gulp-david": "^2.0.1",
    "codacy-coverage": "^1.1.3",
    "del": "^2.2.1",
    "gulp": "^3.9.1",
    "gulp-istanbul": "^1.0.0",
    "gulp-jshint": "^2.0.1",
    "gulp-load-plugins": "^1.2.4",
    "gulp-mocha": "^2.2.0",
    "gulp-zip": "^3.2.0",
    "jsdoc": "^3.4.0",
    "jshint": "^2.9.2",
    "vinyl": "^1.1.1"
  },
  "engines": {
    "node": ">=6.3.0"
  },
  "jshintConfig": {
    "esversion": 6,
    "freeze": true,
    "futurehostile": true,
    "latedef": "nofunc",
    "mocha": true,
    "noarg": true,
    "nocomma": true,
    "node": true,
    "nonbsp": true,
    "nonew": true,
    "singleGroups": true,
    "trailing": true,
    "typed": true,
    "undef": true,
    "unused": true,
    "varstmt": true
  },
  "keywords": [
    "gulp",
    "gulpplugin",
    "minify",
    "php"
  ],
  "scripts": {
    "coverage": "codacy-coverage < var/lcov.info",
    "test": "gulp test"
  }
}
